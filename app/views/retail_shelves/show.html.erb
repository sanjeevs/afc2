<%- model_class = RetailShelf -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:shelf_amount) %>:</strong></dt>
  <dd><%= @retail_shelf.shelf_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @retail_shelf.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_by) %>:</strong></dt>
  <dd><%= @retail_shelf.updated_by %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_on) %>:</strong></dt>
  <dd><%= @retail_shelf.updated_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= @retail_shelf.customer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @retail_shelf.product_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              retail_shelves_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_retail_shelf_path(@retail_shelf), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              retail_shelf_path(@retail_shelf),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
