<%- model_class = RetailShelf -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_retail_shelf_path,
            :class => 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th><%= sortable "customer_id", "Customer" %></th>
      <th><%= sortable "product_id", "Product" %></th>
      <th><%= sortable "shelf_amount"%></th>
      <th><%= sortable "checked_by"%></th>
      <th><%= sortable "checked_on"%></th>
      <th><%= sortable "comment" %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @retail_shelves.each_with_index do |retail_shelf, i| %>
      <tr>
        <td><%=link_to i + 1, retail_shelf_path(retail_shelf)%></td>
        <td><%= link_to retail_shelf.customer.name, retail_shelf_path(retail_shelf)%></td>
        <td><%= link_to retail_shelf.product.name, retail_shelf_path(retail_shelf) %></td>
        <td><%= retail_shelf.shelf_amount %></td>
        <td><%= retail_shelf.checked_by %></td>
        <td><%= retail_shelf.checked_on.to_s(:long) if retail_shelf.checked_on%></td>
        <td><%= retail_shelf.summary_comment %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_retail_shelf_path(retail_shelf), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      retail_shelf_path(retail_shelf),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_retail_shelf_path,
            :class => 'btn btn-primary' %>
