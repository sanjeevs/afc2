<%- model_class = RetailShelf -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>
<%= form_for @retail_shelf, :html => { :class => "form-horizontal retail_shelf" } do |f| %>

  <% if @retail_shelf.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@retail_shelf.errors.count, "error") %> prohibited this retail_shelf from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @retail_shelf.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :customer_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= collection_select(:retail_shelf, :customer_id, Customer.all, :id, :name,
        {:prompt => "Please select a customer name"}) %>
    </div>
    <%=f.error_span(:customer_id) %>
  </div>

  <div class="form-group">
    <%= f.label :product_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= collection_select(:retail_shelf, :product_id, Product.all, :id, :name,
        {:prompt => "Please select a product name"}) %>
    </div>
    <%=f.error_span(:product_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                retail_shelves_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
