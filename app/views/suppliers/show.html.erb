<%- model_class = Supplier -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="container">
<div class="row">
<div class="col-md-4">
<table class="table">
  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><%=@supplier.name%></td>
    </tr>
    <tr>
      <td><strong>Contact Name</strong></td>
      <td><%=@supplier.contact_name%></td>
    </tr>
    <tr>
      <td><strong>Address</strong></td>
      <td><%=@supplier.address%></td>
    </tr>
    <tr>
      <td><strong>Email</strong></td>
      <td><%=@supplier.email%></td>
    </tr>
    <tr>
      <td><strong>Phone</strong></td>
      <td><%=@supplier.phone%></td>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              suppliers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_supplier_path(@supplier), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              supplier_path(@supplier),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<h2 class="display-1">Supplies Received From <%=@supplier.name%></h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Order Amount</th>
      <th>Ship Date</th>
    </tr>
  </thead>
  <tbody>
    <% @supplier.supply_shipments.each do |shipment| %>
    <tr>
      <td> <%= shipment.supply.name %> </td>
      <td> <%= shipment.order_amount %> <%= shipment.supply.unit%> </td>
      <td> <%= shipment.ship_date.to_s(:long) %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
