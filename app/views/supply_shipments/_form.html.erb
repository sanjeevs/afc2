<%= form_for @supply_shipment, :html => { :class => "form-horizontal supply_shipment" } do |f| %>

  <% if @supply_shipment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@supply_shipment.errors.count, "error") %> prohibited this supply_shipment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @supply_shipment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :order_amount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :order_amount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:order_amount) %>
  </div>
  <div class="form-group">
    <%= f.label :ship_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :ship_date, start_year: 2015,  :class => 'form-control' %>
    </div>
    <%=f.error_span(:ship_date) %>
  </div>
  <div class="form-group">
    <%= f.label :supply_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= collection_select(:supply, :supply_id, Supply.all, :id, :name,
                            {:selected => @supply_shipment.supply.id}) %>
    </div>
    <%=f.error_span(:supply_id) %>
  </div>
  <div class="form-group">
    <%= f.label :supplier_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= collection_select(:supplier, :supplier_id, Supplier.all, :id, :name,
                            {:selected => @supply_shipment.supplier_id}) %>
    </div>
    <%=f.error_span(:supplier_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                supply_shipments_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
