<%- model_class = SupplyConsumption -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="container">
<div class="row">
<div class="col-md-4">
<table class="table">
  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><%=@supply_consumption.supply.name%></td>
    </tr>
    <tr>
      <td><strong>Used Amount</strong></td>
      <td><%= pluralize(@supply_consumption.used_amount, @supply_consumption.supply.unit)%></td>
    </tr>
    <tr>
      <td><strong>Lot Name</strong></td>
      <td><%=@supply_consumption.production_run.lot_name%></td>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              supply_consumptions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_supply_consumption_path(@supply_consumption), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              supply_consumption_path(@supply_consumption),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
