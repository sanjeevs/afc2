<%- model_class = SupplyConsumption -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:supply_id) %></th>
      <th><%= model_class.human_attribute_name(:used_amount) %></th>
      <th><%= model_class.human_attribute_name(:production_run) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @supply_consumptions.each do |supply_consumption| %>
      <tr>
        <td><%= link_to supply_consumption.supply.name, supply_consumption_path(supply_consumption) %></td>
        <td><%= supply_consumption.used_amount %> <%= supply_consumption.supply.unit%></td>
        <td><%= supply_consumption.production_run.lot_name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_supply_consumption_path(supply_consumption), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      supply_consumption_path(supply_consumption),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_supply_consumption_path,
            :class => 'btn btn-primary' %>
